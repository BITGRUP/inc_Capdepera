<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.incCapdepera.bitgrup"
        version   = "1.1.13">
	
	
    <name>Incidències</name>
    <description>Incidències</description>
    <author href="http://bitgrup.com" email="info@bitgrup.com">BITGRUP</author>
    
    <platform name="ios">
        <config-file parent="NSPhotoLibraryUsageDescription" platform="ios" target="*-Info.plist">
            <string>Advertisement would like to store a photo.</string>
        </config-file>
        <config-file parent="NSBluetoothPeripheralUsageDescription" platform="ios" target="*-Info.plist">
            <string>Advertisement would like to use bluetooth.</string> 
        </config-file>
    </platform>
	
    <!-- PREFERENCE -->
    <preference name="phonegap-version" value="cli-6.4.0" /> 
    <preference name="orientation" value="portrait" /> 
    <preference name="stay-in-webview" value="false" />
    <preference name="CameraUsesGeolocation" value="false" />
    <preference name="ChildBrowser" value="disable"/>
    <preference name="android-build-tool" value="gradle" /> 
    <preference name="android-minSdkVersion" value="16" />
    <preference name="deployment-target" value="7.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
    
    

  
	   
    <!-- PLUGINS -->
    <gap:plugin name="cordova-plugin-googlemaps" version="1.4.0"  source="npm">
        <param name="API_KEY_FOR_ANDROID" value="AIzaSyAbCsdbOZ31x79tk8PDVHsW3AL_zgNseGo" />
        <param name="API_KEY_FOR_IOS" value="AIzaSyB7g2Ackb5PebwE30QwAqAzPMGo1r4HnFQ" />
    </gap:plugin>
    <gap:plugin name="phonegap-plugin-push"  source="npm"/>
    <gap:plugin name="cordova-plugin-file-transfer" version="1.6.0"  source="npm" />        
    <gap:plugin name="cordova-plugin-camera"  source="npm" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="com-badrit-macaddress"  source="npm" />
    <gap:plugin name="cordova-plugin-uniquedeviceid"  source="npm" />
    <gap:plugin name="cordova-plugin-device"  source="npm" />
    <gap:plugin name="cordova-plugin-inappbrowser"  source="npm" />
	

  
    <feature name='Device'>
        <param name='android-package' value='org.apache.cordova.device.Device' />
        <param name='ios-package' value='Device'/>
    </feature> 
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
    <feature name="http://api.phonegap.com/1.0/file"/>
	
	
    <gap:platform name="ios" />
    <gap:platform name="android" />
	
	
    <access origin="*://*.googleapis.com/*" subdomains="true" />
    <access origin="*://*.gstatic.com/*" subdomains="true" />
    <access origin="*://*.google.com/*" subdomains="true" />
    <access origin="*://*.googleusercontent.com/*" subdomains="true" />
    <access origin="*://*.arta.cat/*" subdomains="true" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    <access origin="*" />

    <key>ExternalHosts</key>
    <array>
        <string>*</string>
    </array>
	
	
	
